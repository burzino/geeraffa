<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvPrenotazioni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtCorso2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:text="@string/corso"
                android:textSize="25sp" />



            <TextView
                android:id="@+id/lblDocente"
                android:layout_width="71dp"
                android:layout_height="wrap_content"

                android:layout_below="@+id/txtCorso2"
                android:text="Docente:"
                />
            <TextView
                android:id="@+id/txtDocente"
                android:layout_width="71dp"
                android:layout_height="wrap_content"

                android:layout_below="@+id/lblDocente"
                android:text="Docente:"
                />

            <TextView
                android:id="@+id/txtData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblDocente"
                android:layout_toRightOf="@+id/txtDocente"

                android:paddingStart="20dp"
                android:text="Data:" />

            <TextView
                android:id="@+id/txtOra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtData"
                android:layout_toRightOf="@+id/txtDocente"
                android:paddingStart="20dp"
                android:text="Ora:" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDisdici"
                style="@style/AppTheme1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtData"
                android:layout_marginStart="250dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="-7dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:elevation="2dp"

                android:focusable="true"
                android:gravity="end"
                android:textColor="@color/colorSecondary"
                android:textColorLink="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconPadding="1dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>